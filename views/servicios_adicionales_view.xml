<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_upocargo_servicios_adicionales_tree" model="ir.ui.view">
        <field name="name">upocargo.servicios_adicionales.tree</field>
        <field name="model">upocargo.servicios_adicionales</field>
        <field name="arch" type="xml">
            <tree string="Servicios Adicionales UPOCARGO">
                <field name="id_servicios"/>
                <field name="tipo"/>
                <field name="estado"/>
                <field name="proveedores" />
                <field name="precio_final" />
            </tree>
        </field>
    </record>

    <record id="view_upocargo_servicios_adicionales_form" model="ir.ui.view">
        <field name="name">upocargo.servicios_adicionales.form</field>
        <field name="model">upocargo.servicios_adicionales</field>
        <field name="arch" type="xml">
            <form string="Servicios Adicionales">
                <sheet>
                    <group>
                        <field name="id_servicios" />
                        <field name="tipo" />
                        <field name="estado" />
                        <field name="proveedores" options="{'no_create': True}"/>
                        <field name="aplicable_a"/>
                        <field name="precio_base" />
                        <field name="precio_final" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_upocargo_servicios_adicionales_search" model="ir.ui.view">
        <field name="name">upocargo.servicios_adicionales.search</field>
        <field name="model">upocargo.servicios_adicionales</field>
        <field name="arch" type="xml">
            <search>
                <filter name="search_precio" string="Precio Final > 20" domain="[('precio_final','>',20)]" />
                <separator orientation="vertical" />
                <group expand="0" string="Agrupar por...">
                    <filter name="group_by_proveedor" string="Proveedor" context="{'group_by':'id_proveedor'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="upocargo_servicios_adicionales_action" model="ir.actions.act_window">
        <field name="name">Servicios Adicionales UPOCARGO</field>
        <field name="res_model">upocargo.servicios_adicionales</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
