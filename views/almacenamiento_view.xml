<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_upocargo_almacenamiento_tree" model="ir.ui.view">
        <field name="name">upocargo.almacenamiento.tree</field>
        <field name="model">upocargo.almacenamiento</field>
        <field name="arch" type="xml">
            <tree string="Almacenamientos UPOCARGO">
                <field name="id_almacenamiento"/>
                <field name="fecha_ingreso"/>
                <field name="fecha_salida"/>
                <field name="estado"/>
            </tree>
        </field>
    </record>

    <record id="view_upocargo_almacenamiento_form" model="ir.ui.view">
        <field name="name">upocargo.almacenamiento.form</field>
        <field name="model">upocargo.almacenamiento</field>
        <field name="arch" type="xml">
            <form string="Almacenamiento">
                <sheet>
                    <group>
                        <field name="id_almacenamiento" />
                        <field name="fecha_ingreso" />
                        <field name="fecha_salida" />
                        <field name="estado" />
                        <field name="cliente"/>
                    </group>
                    <group>
                        <field name="almacen" options="{'no_create': True}" />
                    </group>
                    <notebook>
                        <page name="Bienes">
                            <field name="bienes_almacenados">
                                <tree>
                                    <field name="descripcion" />
                                    <field name="peso" />
                                    <field name="tamanyo"/>
                                    <field name="cantidad"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_upocargo_almacenamiento_calendar" model="ir.ui.view">
        <field name="name">upocargo.almacenamiento.calendar</field>
        <field name="model">upocargo.almacenamiento</field>
        <field name="arch" type="xml">
            <calendar string="Almacenamientos" color="estado" date_start="fecha_ingreso" date_stop="fecha_salida" mode="month">
                <field name="id_almacenamiento" />
                <field name="cliente" />
            </calendar>
        </field>
    </record>

    <record id="view_upocargo_almacenamiento_search" model="ir.ui.view">
        <field name="name">upocargo.almacenamiento.search</field>
        <field name="model">upocargo.almacenamiento</field>
        <field name="arch" type="xml">
            <search>
                <!--
                <filter name="search_capacity" string="Capacity > 10" domain="[('capacity','>',10)]" />
                <separator orientation="vertical" />
                <group expand="0" string="Agrupar por...">
                    <filter name="group_by_instructor" string="Instructor" context="{'group_by':'instructores_id'}" />
                </group>
            -->
            </search>
        </field>
    </record>

    <record id="upocargo_almacenamiento_action" model="ir.actions.act_window">
        <field name="name">Almacenamiento UPOCARGO</field>
        <field name="res_model">upocargo.almacenamiento</field>
        <field name="view_mode">calendar,tree,form</field>
    </record>
</odoo>
