<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
    
        <record id="rule_mudanza_cliente" model="ir.rule">
            <field name="name">Mudanzas del Cliente</field>
            <field name="model_id" ref="model_upocargo_mudanza"/>
            <field name="domain_force">[('cliente','=','user.partner_id.id')]</field>
            <field name="groups" eval="[(4,ref('base.group_portal'))]"/>
        </record>

        <record id="rule_almacenamiento_cliente" model="ir.rule">
            <field name="name">Almacenamientos del Cliente</field>
            <field name="model_id" ref="model_upocargo_almacenamiento"/>
            <field name="domain_force">[('cliente','=','user.partner_id.id')]</field>
            <field name="groups" eval="[(4,ref('base.group_portal'))]"/>
        </record>

        <record id="rule_factura_cliente" model="ir.rule">
            <field name="name">Facturas del Cliente</field>
            <field name="model_id" ref="model_upocargo_factura"/>
            <field name="domain_force">[('cliente','=','user.partner_id.id')]</field>
            <field name="groups" eval="[(4,ref('base.group_portal'))]"/>
        </record>
    
    </data>
    

</odoo>
