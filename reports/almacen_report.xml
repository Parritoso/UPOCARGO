<odoo>
    <template id="upocargo_almacen_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="almacen">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Reporte del Almacén: <span t-field="almacen.name" /></h2>
                        <table class="table table-bordered">
                            <tr>
                                <td>
                                    <strong>ID del Almacén:</strong>
                                </td>
                                <td>
                                    <span t-field="almacen.id_almacen" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Tamaño Máximo:</strong>
                                </td>
                                <td>
                                    <span t-field="almacen.tamaño_maximo" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Tamaño Ocupado:</strong>
                                </td>
                                <td>
                                    <span t-field="almacen.tamaño_ocupado" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Temperatura Actual:</strong>
                                </td>
                                <td>
                                    <span t-field="almacen.temperatura_actual" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Humedad Actual:</strong>
                                </td>
                                <td>
                                    <span t-field="almacen.humedad_actual" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Temperatura Mínima Permitida:</strong>
                                </td>
                                <td>
                                    <span t-field="almacen.temp_min" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Temperatura Máxima Permitida:</strong>
                                </td>
                                <td>
                                    <span t-field="almacen.temp_max" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Humedad Mínima Permitida:</strong>
                                </td>
                                <td>
                                    <span t-field="almacen.humedad_min" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Humedad Máxima Permitida:</strong>
                                </td>
                                <td>
                                    <span t-field="almacen.humedad_max" />
                                </td>
                            </tr>
                        </table>

                        <h3>Bienes almacenados:</h3>
                        <t t-foreach="almacen.almacenamiento_id" t-as="almacenamiento">
                            <span t-field="almacenamiento.id_almacenamiento"></span>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Bien</th>
                                        <th>Tamaño</th>
                                        <th>Cantidad</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="almacenamiento.bienes_almacenados" t-as="bien">
                                        <tr>
                                            <td>
                                                <span t-field="bien.name" />
                                            </td>
                                            <td>
                                                <span t-field="bien.tamanyo" />
                                            </td>
                                            <td>
                                                <span t-field="bien.cantidad" />
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>