<odoo>
    <template id="upocargo_factura_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure" />
                        <div class="row" style="font-size: 32px; margin-bottom: 20px;">
                            <span style="font-weight: bold; text-decoration: underline; ">
                                <strong>UPOCARGO -</strong>
                            </span>
                            <span style="color: #999999;" t-field="o.id_factura" />
                        </div>
                        <div class="row" style="font-size: 24px; margin-bottom: 20px;">
                            <span style="font-weight: bold; text-decoration: underline; ">ID Factura:</span>
                            <span style="color: #999999;" t-field="o.id_factura" />
                        </div>
                        <div class="row">
                            <div class="col-xs-8" style="text-align: left; margin: auto; padding-left: 15px; padding-top: 10px;">
                                <table>
                                    <tr>
                                        <td>
                                            <p>
                                                <strong>ID Factura: </strong>
                                            </p>
                                            <p>
                                                <strong>Precio: </strong>
                                            </p>
                                        </td>
                                        <td style="padding-left: 10px;">
                                            <p t-field="o.id_factura" />
                                            <p t-field="o.precio" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div t-if="o.almacenamiento_id" class="row" style="margin-top: 40px; font-weight: bold; font-size: 19px;">
                            Almacenamiento
                            </div>
                            <div t-if="o.almacenamiento_id" id="almacenamiento_id_r" class="row" style="margin-top: 10px;">
                                <table>
                                    <tr>
                                        <td>
                                            <p>
                                                <strong>ID Almacenamiento: </strong>
                                            </p>
                                            <p>
                                                <strong>Fecha Ingreso: </strong>
                                            </p>
                                            <p>
                                                <strong>Fecha Salida: </strong>
                                            </p>
                                            <p>
                                                <strong>Estado: </strong>
                                            </p>
                                        </td>
                                        <t t-foreach="o.almacenamiento_id" t-as="a">
                                            <td>
                                                <p t-field="a.id_almacenamiento" />
                                            </td>
                                            <td>
                                                <p t-field="a.fechaIngreso" />
                                            </td>
                                            <td>
                                                <p t-field="a.fechaSalida" />
                                            </td>
                                            <td>
                                                <p t-field="a.estado" />
                                            </td>
                                        </t>
                                    </tr>
                                </table>
                            </div>
                            <div t-if="o.mudanza_id" class="row" style="margin-top: 40px; font-weight: bold; font-size: 19px;">
                            Mudanza
                            </div>
                            <div t-if="o.mudanza_id" id="mudanza_id_r" class="row" style="margin-top: 10px;">
                                <table>
                                    <tr>
                                        <td>
                                            <p>
                                                <strong>ID Mudanza: </strong>
                                            </p>
                                            <p>
                                                <strong>Fecha: </strong>
                                            </p>
                                            <p t-if="o.mudanza_id.fecha_final_mudanza">
                                                <strong>Fecha Final: </strong>
                                            </p>
                                            <p>
                                                <strong>Direccion Origen: </strong>
                                            </p>
                                            <p>
                                                <strong>Estado: </strong>
                                            </p>
                                        </td>
                                        <td style="padding-left: 10px;">
                                            <p t-field="o.mudanza_id.id_mudanza" />
                                            <p t-field="o.mudanza_id.fecha" />
                                            <p t-if="o.mudanza_id.fecha_final_mudanza"
                                                t-field="o.mudanza_id.fecha_final_mudanza" />
                                            <p t-field="o.mudanza_id.dirOrigen" />
                                            <p t-field="o.mudanza_id.dirDestino" />
                                            <p t-field="o.mudanza_id.estado" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>