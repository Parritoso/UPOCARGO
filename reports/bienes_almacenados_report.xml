<odoo>
    <template id="upocargo_bienes_almacenados_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure" />
                        <div class="row" style="font-size: 32px; margin-bottom: 20px;">
                            <span style="font-weight: bold; text-decoration: underline; ">
                                <strong>UPOCARGO -</strong>
                            </span>
                            <span style="color: #999999;" t-field="o" />
                        </div>
                        <div class="row" style="font-size: 24px; margin-bottom: 20px;">
                            <span style="font-weight: bold; text-decoration: underline; ">ID Bien:</span>
                            <span style="color: #999999;" t-field="o.id_bien" />
                        </div>
                        <div class="row">
                            <div class="col-xs-8" style="text-align: left; margin: auto; padding-left: 15px; padding-top: 10px;">
                                <table>
                                    <tr>
                                        <td>
                                            <p>
                                                <strong>ID Bien: </strong>
                                            </p>
                                            <p>
                                                <strong>Descripcion: </strong>
                                            </p>
                                            <p>
                                                <strong>Peso: </strong>
                                            </p>
                                            <p>
                                                <strong>Tamaño: </strong>
                                            </p>
                                        </td>
                                        <td style="padding-left: 10px;">
                                            <p t-field="o.id_bien" />
                                            <p t-field="o.descripcion" />
                                            <p t-field="o.peso" />
                                            <p t-field="o.tamaño" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div t-if="o.almacenamiento" class="row" style="margin-top: 40px; font-weight: bold; font-size: 19px;">
                            Almacenamiento
                            </div>
                            <div t-if="o.almacenamiento" id="almacenamiento_r" class="row" style="margin-top: 10px;">
                                <table>
                                    <tr>
                                        <td>
                                            <p>
                                                <strong>ID Almacenamiento: </strong>
                                            </p>
                                            <p>
                                                <strong>Fecha Ingreso: </strong>
                                            </p>
                                            <p>
                                                <strong>Fecha Salida: </strong>
                                            </p>
                                            <p>
                                                <strong>Estado: </strong>
                                            </p>
                                        </td>
                                        <t t-foreach="o.almacenamiento" t-as="a">
                                            <td>
                                                <p t-field="a.id_almacenamiento" />
                                            </td>
                                            <td>
                                                <p t-field="a.fechaIngreso" />
                                            </td>
                                            <td>
                                                <p t-field="a.fechaSalida" />
                                            </td>
                                            <td>
                                                <p t-field="a.estado" />
                                            </td>
                                        </t>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
