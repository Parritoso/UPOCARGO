<odoo>
    <template id="upocargo_proveedor_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure" />
                        <div class="row" style="font-size: 32px; margin-bottom: 20px;">
                            <span style="font-weight: bold; text-decoration: underline; ">
                                <strong>UPOCARGO -</strong>
                            </span>
                            <span style="color: #999999;" t-field="o" />
                        </div>
                        <div class="row" style="font-size: 24px; margin-bottom: 20px;">
                            <span style="font-weight: bold; text-decoration: underline; ">ID Bien:</span>
                            <span style="color: #999999;" t-field="o.id_bien" />
                        </div>
                        <div class="row">
                            <div class="col-xs-8" style="text-align: left; margin: auto; padding-left: 15px; padding-top: 10px;">
                                <table>
                                    <tr>
                                        <td>
                                            <p>
                                                <strong>ID Proveedor: </strong>
                                            </p>
                                            <p>
                                                <strong>Entidad: </strong>
                                            </p>
                                        </td>
                                        <td style="padding-left: 10px;">
                                            <p t-field="o.id_proveedor" />
                                            <p t-field="o.entidad" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div t-if="o.servicios_adicionales" class="row" style="margin-top: 40px; font-weight: bold; font-size: 19px;">
                            Servicios Adicionales
                            </div>
                            <div t-if="o.servicios_adicionales" id="servicios_adicionales_r" class="row" style="margin-top: 10px;">
                                <table>
                                    <tr>
                                        <td>
                                            <p>
                                                <strong>ID Sevicios Adicional: </strong>
                                            </p>
                                            <p>
                                                <strong>Tipo: </strong>
                                            </p>
                                            <p>
                                                <strong>Aplicable: </strong>
                                            </p>
                                            <p>
                                                <strong>Precio Base: </strong>
                                            </p>
                                            <p>
                                                <strong>Precio Final: </strong>
                                            </p>
                                            <p>
                                                <strong>Estado: </strong>
                                            </p>
                                        </td>
                                        <t t-foreach="o.servicios_adicionales" t-as="sa">
                                            <td>
                                                <p t-field="sa.id_servicios" />
                                            </td>
                                            <td>
                                                <p t-field="sa.tipo" />
                                            </td>
                                            <td>
                                                <p t-field="sa.aplicable_a" />
                                            </td>
                                            <td>
                                                <p t-field="sa.precio_base" />
                                            </td>
                                            <td>
                                                <p t-field="sa.precio_final" />
                                            </td>
                                            <td>
                                                <p t-field="sa.estado" />
                                            </td>
                                        </t>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
