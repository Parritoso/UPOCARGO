<odoo>
    <template id="upocargo_cliente_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure" />
                        <div class="row" style="font-size: 32px; margin-bottom: 20px;">
                            <span style="font-weight: bold; text-decoration: underline; ">
                                <strong>UPOCARGO -</strong>
                            </span>
                            <span style="color: #999999;" t-field="o" />
                        </div>
                        <div class="row" style="font-size: 24px; margin-bottom: 20px;">
                            <span style="font-weight: bold; text-decoration: underline; ">ID Cliente:</span>
                            <span style="color: #999999;" t-field="o.id_cliente" />
                        </div>
                        <div class="row">
                            <div class="col-xs-2" style="margin: auto; text-align: center; padding-left: 15px; padding-right: 15px; border-right: 2px solid #cccccc;">
                                <p style="padding-top: 10px;">
                                    <img t-if="not o.photo" t-att-src="'/web/static/src/img/placeholder.png'" height="120" border="1" width="120" />
                                    <img t-if="o.photo" t-att-src="'data:image/png;base64,%s' % to_text(o.photo)" height="120" border="1" width="120" />
                                </p>
                                <p t-field="o.name" style="font-size: 14px; font-weight: bold;" />
                            </div>
                            <div class="col-xs-8" style="text-align: left; margin: auto; padding-left: 15px; padding-top: 10px;">
                                <table>
                                    <tr>
                                        <td>
                                            <p>
                                                <strong>ID Cliente: </strong>
                                            </p>
                                            <p>
                                                <strong>Nombre: </strong>
                                            </p>
                                            <p>
                                                <strong>Telefono:</strong>
                                            </p>
                                            <p>
                                                <strong>Direccion: </strong>
                                            </p>
                                            <p>
                                                <strong>Email:</strong>
                                            </p>
                                        </td>
                                        <td style="padding-left: 10px;">
                                            <p t-field="o.id_cliente" />
                                            <p t-field="o.name" />
                                            <p t-field="o.telefono" />
                                            <p t-field="o.direccion" />
                                            <p t-field="o.email" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div t-if="o.mudanza" class="row" style="margin-top: 40px; font-weight: bold; font-size: 19px;">
                            Mudanzas de <span t-field="o.name" />
                            </div>
                            <div t-if="o.mudanza" id="mudanza_r" class="row" style="margin-top: 10px;">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>ID Mudanza</th>
                                            <th>Fecha</th>
                                            <th>Direccion Origen</th>
                                            <th>Direccion Destino</th>
                                            <th>Estado</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.mudanza" t-as="m">
                                            <tr>
                                                <td>
                                                    <p t-field="m.id_mudanza" />
                                                </td>
                                                <td>
                                                    <p t-field="m.fecha" />
                                                </td>
                                                <td>
                                                    <p t-field="m.dirOrigen" />
                                                </td>
                                                <td>
                                                    <p t-field="m.dirDestino" />
                                                </td>
                                                <td>
                                                    <p t-field="m.estado" />
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>